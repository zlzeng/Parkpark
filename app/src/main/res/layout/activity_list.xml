<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zz.parkpark.ListActivity">

    <fragment android:name="com.example.zz.parkpark.RecyclerViewFragment"
        tools:context=".ListActivity"
        android:id="@+id/recyclviewfragment"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_gravity="center|bottom"/>

    <fragment android:name="com.example.zz.parkpark.SearchFragment"
        android:id="@+id/searchFragment2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top|center"/>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp">

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="69dp"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:elevation="3dp"
            android:background="#ffffff"
            android:id="@+id/relativeLayout3" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView15"
                android:src="@drawable/line"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/textView26"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView26"
                android:textSize="28dp"
                android:text="時租"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日租"
                android:id="@+id/textView27"
                android:layout_alignBottom="@+id/textView26"
                android:layout_toEndOf="@+id/textView26"
                android:textSize="28dp"
                android:layout_marginLeft="60dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月租"
                android:id="@+id/textView28"
                android:layout_toEndOf="@+id/imageView16"
                android:textSize="28dp"
                android:layout_alignBottom="@+id/textView27"
                android:layout_marginLeft="30dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView16"
                android:src="@drawable/line"
                android:layout_toRightOf="@+id/textView27"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="350dp"
            android:layout_height="39dp"
            android:text="更多篩選條件"
            android:id="@+id/button_more_option"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#ffffff"
            android:textSize="20dp"
            android:onClick="onBtnMoreOptionClick"
            android:elevation="3dp"
            android:gravity="center"
            android:layout_marginBottom="5dp" />
    </FrameLayout>

</FrameLayout>
